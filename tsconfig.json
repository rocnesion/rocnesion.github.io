{
  "compilerOptions": {
    "strict": true,

    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",

    "sourceMap": true,
    "importsNotUsedAsValues": "error",

    "baseUrl": ".",
    "paths": { "~/*": ["./source/*"] }
  },

  "include": ["**/*.ts", "**/*.svelte"],
  "exclude": ["node_modules", ".svelte-kit", ".svelte-out"]
}
